<div class='content my-4 d-flex justify-content-between'>
  <div>
    <h1>Stores</h1>
  </div>

  <div>
    <%= link_to 'Import from file', transactions_import_path, class: 'btn btn-sm  btn-primary' %>
  </div>
</div>

<% if @stores.any? %>
  <div class="table-responsive">
    <%= render partial: 'stores_table', locals: { stores: @stores }%>
  </div>
<% else %>
  <p>No stores found</p>
<% end %>
