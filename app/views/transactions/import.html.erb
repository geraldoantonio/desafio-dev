<div class='content my-4 d-flex justify-content-between'>
  <div>
    <h1>Import File</h1>
  </div>

  <div>
    <%= link_to 'Home', root_path, class: 'btn btn-sm  btn-secondary' %>
  </div>
</div>

<%= form_tag transactions_import_path, multipart: true, class: 'form' do %>

  <div class="mb-3">
    <label for="disabledTextInput" class="form-label">Select File</label>
    <%= file_field_tag :file, class: "form-control"  %>
  </div>

  <div class="mb-3">
    <%= submit_tag "Import", class: "btn btn-primary" %>
  </div>
<% end %>