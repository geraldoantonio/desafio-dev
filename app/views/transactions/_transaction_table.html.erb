<table id='transactions' class='display table table-striped table-hover'>
  <thead class="thead-dark">
    <tr>
      <th scope="col">Occurrence At</th>
      <th scope="col">Store Name</th>
      <th scope="col">Store Owner</th>
      <th scope="col">Card Number</th>
      <th scope="col">CPF</th>
      <th scope="col">Kind</th>
      <th scope="col">Amount</th>
    </tr>
  </head>

  <tbody> 
    <%= render partial: 'transaction_item', collection: transactions, as: :transaction %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan='6'>Total</th>
      <th scope="col">
        <span class='text-right'>
          <%= number_to_currency(transactions.sum(&:amount), unit: 'R$ ', separator: ',', delimiter: '.') %>
        </span>
      </th>
    </tr>
  </tfoot>
</table>